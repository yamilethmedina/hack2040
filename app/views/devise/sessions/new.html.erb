                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>

                  <div class="actions">
                    <%= f.submit "Log in" %>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
         
                    </div>
                </div>

    
    </body>   
</html>